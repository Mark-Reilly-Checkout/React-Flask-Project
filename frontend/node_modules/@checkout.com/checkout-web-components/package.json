{
  "name": "@checkout.com/checkout-web-components",
  "version": "0.6.0-beta",
  "license": "MIT",
  "author": "payment.experience@checkout.com",
  "description": "Checkout Payment Components loader",
  "repository": "https://github.com/checkout/checkout-web-components.git",
  "main": "dist/index.js",
  "module": "dist/index.module.js",
  "types": "dist/index.d.ts",
  "files": ["dist/*", "dist/**/*"],
  "scripts": {
    "build": "NODE_ENV=production rollup -c",
    "dev": "rollup -c -w",
    "lint": "eslint --ext .ts,.tsx src && yarn format:check",
    "lint:fix": "eslint --ext .ts,.tsx src --fix && yarn format",
    "format": "prettier ./src --write",
    "format:check": "prettier ./src --check",
    "test": "jest",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit --pretty",
    "test:e2e": "npx playwright test",
    "test:e2e:ci:chromium": "playwright test --project=chromium",
    "test:e2e:ci:firefox": "playwright test --project=firefox",
    "test:e2e:ci:webkit": "playwright test --project=webkit",
    "install:browsers": "playwright install --with-deps",
    "install:browsers:chromium": "playwright install --with-deps chromium",
    "install:browsers:firefox": "playwright install --with-deps firefox",
    "install:browsers:webkit": "playwright install --with-deps webkit"
  },
  "packageManager": "yarn@1.22.18",
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@babel/eslint-parser": "^7.5.4",
    "@babel/plugin-transform-runtime": "^7.18.0",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@babel/runtime": "^7.18.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@commitlint/config-lerna-scopes": "^17.0.0",
    "@lerna-lite/cli": "^1.3.0",
    "@parcel/babel-preset-env": "^2.12.0",
    "@playwright/test": "^1.37.1",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "^0.4.3",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.2.3",
    "parcel": "^2.12.0",
    "prettier": "^3.0.2",
    "rollup": "^3.28.0",
    "rollup-plugin-dts": "^6.0.1",
    "typescript": "^4.5.2",
    "wait-on": "^7.0.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog",
      "maxHeaderWidth": 70
    }
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  }
}
